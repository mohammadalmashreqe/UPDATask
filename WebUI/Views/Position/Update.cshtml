

@model PositionUpdateViewModel

<h1 class="bg-info text-white">Update Position</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="PositionName" value="@Model.Position.Name" />
    <input type="hidden" name="PositionID" value="@Model.Position.ID" />

    <h2 class="bg-info p-1 text-white">Add To @Model.Position.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (var user in Model.NonMembers)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.EmpId">
                    </td>
                </tr>
            }
        }
    </table>

    <h2 class="bg-info p-1 text-white">Remove From @Model.Position.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (var user in Model.Members)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.EmpId">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<partial name="_notificationPartial" />
